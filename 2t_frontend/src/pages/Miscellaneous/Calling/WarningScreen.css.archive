/* Footer toolbar styles */
.footer-toolbar {
  justify-content: center; /* Center buttons horizontally */
  padding: 1em 0; /* Add some padding at the top and bottom */
}

.footer-buttons {
  display: flex;
  justify-content: center; /* Center buttons horizontally */
}

ion-footer {
  --min-height: 100px; /* Set a minimum height for the footer */
  align-items: center; /* Center content vertically */
  display: flex;
}

/* Button styles */
ion-button {
  margin: 0 10px; /* Add some space between buttons */
}

/* Adjust button icon size if necessary */
ion-icon {
  font-size: 2.5em; /* Increase icon size */
}


