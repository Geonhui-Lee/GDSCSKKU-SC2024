/* CallScreen.css */

.call-screen-content {
  padding-top: 10%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  background-color: #FFF9C4; /* light yellow color */
  color: black;
  text-align: center;
}

.call-info {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #FFF9C4; /* light yellow color */
}

.call-info h2 {
  font-size: 2.2em;
  margin: 0;
  color: #d33; /* Red color for the phishing warning */
}

.call-info h3 {
  font-size: 1.8em;
  margin: 0;
}

.voice-phishing-alert {
  /* Custom styles for the voice phishing alert */
}

/* Header styles */
ion-header {
  background: transparent;
  --ion-background-color: none;
  --ion-color-base: transparent;
}

ion-toolbar {
  --background: transparent;
}

/* Title styles */
ion-title {
  color: black;
  font-size: 1.2em;
}

/* Footer styles */
ion-footer {
  background-color: white;
}

ion-toolbar {
  --background: transparent;
  padding: 0.5em;
}

/* Button styles */
ion-button {
  --background: transparent;
  --background-activated: rgba(0, 0, 0, 0.1); /* Light feedback on tap */
  --background-hover: rgba(0, 0, 0, 0.05); /* Light feedback on hover */
}


