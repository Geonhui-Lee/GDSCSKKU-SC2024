.call-end-button-container {
  display: flex;
  justify-content: center; /* Center the button horizontally */
  padding: 20px; /* Add some padding around the button */
  background: transparent; /* Ensure the background is transparent */
}

/* Call end button styles */
.call-end-button {
  --background: #ff3b30; /* iOS red color for the call end button */
  --border-radius: 50%; /* Make the button circular */
  width: 70px; /* Set a fixed width */
  height: 70px; /* Set a fixed height */
  display: flex;
  justify-content: center; /* Center the icon horizontally */
  align-items: center; /* Center the icon vertically */
}

.call-end-button ion-icon {
  font-size: 2.5em; /* Set the size of the icon */
  color: white; /* Set the icon color to white */
}

